<h2>Customers</h2>

<div class="container-fluid">

    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Tables</li>
    </ol>

    <!-- DataTables Example -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Data Table Example
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="CustomerTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Customer[0].ObjNo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Customer[0].CustomerNo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Customer[0].SearchName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Customer[0].CustomerName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Customer[0].Http)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Customer[0].OrganizationNo)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Customer[0].EMail)
                            </th>
                            <th>
                                Manage
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Customer)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ObjNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SearchName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CustomerName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Http)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OrganizationNo)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.EMail)
                                </td>
                                <td>
                                    <a asp-page="./Edit" asp-route-id="@item.ObjNo">Edit</a> |
                                    <a asp-page="./Details" asp-route-id="@item.ObjNo">Details</a> |
                                    <a asp-page="./Delete" asp-route-id="@item.ObjNo">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

