@page
@model Resource.Pages.Panel.CRUDs.Customers.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Panel/_themeLayout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table table-bordered" id="CustomerTable" width="100%" cellspacing="0">
    <thead>
        <tr>
            @foreach (var property in Model.Customer[0].GetType().GetProperties())
            {
                <th>
                    @Html.DisplayFor(model => property.Name)
                </th>
            }
            <th>
                CRUD
            </th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            @foreach (var property in Model.Customer[0].GetType().GetProperties())
            {
                <th>
                    @Html.DisplayFor(model => property.Name)
                </th>
            }
            <th>
                CRUD
            </th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (var customer in Model.Customer)
        {
            <tr>
                @foreach (var prop in customer.GetType().GetProperties())
                {
                    var value = prop.GetValue(customer);
                    <td>

                        @Html.DisplayFor(modelItem => value)
                    </td>
                }

                <td>
                    <a asp-page="../CRUDs/Update" asp-route-id="@customer.ObjNo">Edit</a> |
                    <a asp-page="../CRUDs/Details" asp-route-id="@customer.ObjNo">Details</a> |
                    <a asp-page="../CRUDs/Delete" asp-route-id="@customer.ObjNo">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>